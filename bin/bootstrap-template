#!/bin/sh -eux

run_template() {
  TEMPLATE=$1
  DEST=$2

  cat "template-files/$TEMPLATE" \
    | sed "s@\\\${project-name}\\\$@${ECOLOGY_PROJECT_NAME}@g" \
    | sed "s@\\\${project-description}\\\$@${ECOLOGY_PROJECT_DESCRIPTION}@g" \
    | tee "${DEST}"
}

run_template "README.md.template" "README.md"
